{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "build",
    "alwaysStrict": true,
    "locale": "it",
  },
  "include": [
    "src/**/*.ts"
  ],
  "noImplicitAny": true,
  "noUnusedParameters": true
}